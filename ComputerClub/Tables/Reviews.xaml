<Page x:Class="ComputerClub.Reviews"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerClub"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Reviews" IsVisibleChanged="Page_IsVisibleChanged">

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="379*"/>
            <RowDefinition Height="56*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="DGreviews" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="id Клиента" Binding="{Binding UserID}" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Рейтинг" Binding="{Binding Rating}" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Сообщение" Binding="{Binding Message}" Width="*"></DataGridTextColumn>
                <DataGridTemplateColumn Width="auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Редактировать" Name="BtEd" Click="BtEd_Click"></Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="10,10,0,10" Width="170" Grid.Row="1" Name ="BtAdd" Click="BtAdd_Click_1"/>
        <Button Content="Удалить" HorizontalAlignment="Right" Margin="10,10,0,10" Width="170" Grid.Row="1" Name ="BtDel" Click="BtDel_Click"/>
        <Button Content="Назад" HorizontalAlignment="Center" Grid.Row="1" Margin="10,10,0,10" Width="170" Name ="BtBack" Click="BtBack_Click"></Button>
    </Grid>
</Page>
