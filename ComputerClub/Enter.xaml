<Page x:Class="ComputerClub.Enter"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerClub"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Enter">

    <Grid Style="{StaticResource GridSt}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="189*"/>
            <ColumnDefinition Width="211*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="141*"/>
            <RowDefinition Height="119*"/>
            <RowDefinition Height="190*"/>
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource TextBlockSt}" Text="Введите логин"></TextBlock>
        <TextBlock Style="{StaticResource TextBlockSt}" Text="Введите пароль" Grid.Row="1"></TextBlock>
        <TextBox Style="{StaticResource TextBoxSt}" x:Name="LoginText" Grid.Column="1"></TextBox>
        <PasswordBox Style="{StaticResource PasswordBoxSt}" x:Name="PasswordText" Grid.Row="1" Grid.Column="1"></PasswordBox>

        <Button Style="{StaticResource ButtonSt}" x:Name="enter" Content="Войти" Click="EnterClick" Grid.Row="2"></Button>
        <Button Style="{StaticResource ButtonSt}" x:Name="registration" Content="Зарегестрироваться" Click="RegistrationClick" Grid.Row="2" Grid.Column="1"></Button>

    </Grid>
</Page>
