<Page x:Class="ComputerClub.ProductAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerClub"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductAdd">

    <Grid Background="AliceBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Название товара"></TextBlock>
        <TextBlock Text="Цена товара" Grid.Row="1"></TextBlock>
        <TextBox Text="{Binding ProductName}" Grid.Column="1"></TextBox>
        <TextBox Text="{Binding ProductPrice}"  Grid.Column="1" Grid.Row="1"></TextBox>
        <Button Content="Сохранить" Grid.Row="2" Grid.Column="0"  Name="BtSave" Click="BtSaveClick"></Button>
        <Button Content="Назад" Grid.Row="2" Grid.Column="1" Name="BtBack" Click="BtBackClick"/>

    </Grid>
</Page>
