<Page x:Class="ComputerClub.AddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerClub"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddPage">

    <Grid Background="white">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="114*"/>
            <ColumnDefinition Width="179*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="153*"/>
            <RowDefinition Height="148*"/>
            <RowDefinition Height="87*"/>
            <RowDefinition Height="62*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Номер ПК"></TextBlock>
        <TextBlock Text="Видеокарта" Grid.Row="1"></TextBlock>
        <TextBlock Text="Процессор" Grid.Row="2" Grid.RowSpan="2"></TextBlock>
        <TextBox Grid.ColumnSpan="2" Margin="311,0,0,0"/>
        <TextBox Grid.Row="1" Grid.ColumnSpan="2" Margin="311,0,0,0"/>
        <TextBox Grid.Row="2" Grid.ColumnSpan="2" Margin="311,0,0,0" Grid.RowSpan="2"/>

        <Button Content="Сохранить" Grid.ColumnSpan="2" Grid.Row="3" Name="BtSave" Click="BtSave_Click"></Button>

    </Grid>
</Page>
