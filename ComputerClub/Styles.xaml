<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="ButtonSt" TargetType="Button">
        <Setter Property="Background" Value="Purple"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Width" Value="200"/>
        <Setter Property="Height" Value="100"/>
    </Style>
    <Style x:Key="TextBlockSt" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="Background" Value="#FF2B2DCA"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Width" Value="200"/>
        <Setter Property="Height" Value="100"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>
    <Style x:Key="GridSt" TargetType="Grid">
        <Setter Property="Background" Value="#FF73F5F2"/>
    </Style>
    <Style x:Key="TextBoxSt" TargetType="TextBox">
        <Setter Property="Background" Value="#FF06714C"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Foreground" Value="#FFBAE48A"/>
    </Style>
    <Style x:Key="PasswordBoxSt" TargetType="PasswordBox">
        <Setter Property="Background" Value="#FF06714C"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Foreground" Value="#FFBAE48A"/>
    </Style>
</ResourceDictionary>