<Page x:Class="ComputerClub.Buyer.MainBuyer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerClub.Buyer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainBuyer">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="79*"/>
            <RowDefinition Height="371*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Компьютерный клуб" Grid.ColumnSpan="3" FontFamily="Arial Black" FontSize="36" TextAlignment="Center"></TextBlock>
        <Button Content="Продукты" Click="ProdClick" Grid.Row="1" Grid.Column="0"></Button>
        <Button Content="Доставка" Click="DelivClick" Grid.Row="1" Grid.Column="1"></Button>
        <Button Content="Поставщики" Click="ProvClick" Grid.Row="1" Grid.Column="2"></Button>
        <Button Content="Выйти" Click="BtExit" Grid.Column="2" Margin="134,5,5,39" ></Button>

    </Grid>
</Page>
